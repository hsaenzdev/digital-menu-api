model Customer {
  id String @id @default(cuid())

  // Platform: each customer belongs to ONE platform only
  platform String @default("whatsapp") // 'whatsapp' | 'messenger'

  // Platform-specific identifiers (only ONE will be set)
  phoneNumber   String? @unique // For WhatsApp customers
  messengerPsid String? @unique // For Messenger customers (Page-Scoped ID)

  name  String?
  email String?

  // Customer info
  birthday DateTime?
  isActive Boolean   @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders Order[]

  @@map("customers")
}
